{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "error-code": "lightRed",
    "git": "lightBlue",
    "git-ahead": "#2EC4B6",
    "git-behind": "#8A4FFF",
    "git-dirty": "#ffeb3b",
    "git-staged": "#2FDA4E",
    "git-unstaged": "#E84855",
    "hostname": "lightCyan",
    "os-icon": "#ffffff",
    "path": "#b4e77a",
    "prompt-symbol": "lightRed",
    "shell": "#ffffff",
    "success-code": "lightGreen",
    "text": "lightWhite",
    "time": "darkGray",
    "username": "cyan"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ .Icon }} ",
          "foreground": "p:os-icon",
          "type": "os",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ .Shell }} ",
          "foreground": "p:shell",
          "type": "text",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ if .SSHSession }}ssh {{ end }}<p:username>{{ .UserName }}</>@<p:hostname>{{ .HostName }}</> ",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": "<p:text>in</> <p:path>{{ path .Path .Location }}</> ",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "<p:text>git </>{{ .UpstreamIcon }} {{.HEAD}} {{if .BranchStatus }}{{ .BranchStatus }} {{ end }}{{ if .Working.Changed }}<p:git-unstaged>\uf044 {{ .Working.String }}</> {{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }}| {{ end }}{{ if .Staging.Changed }}<p:git-staged>\uf046 {{ .Staging.String }}</> {{ end }}",
          "foreground": "p:git",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none",
            "style": "austin"
          },
          "template": "\u231b{{ .FormattedMs }} ",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "{{ if gt .Code 0 }}\uf00d {{ .Code }} {{ reason .Code }}{{ else }}\uf00c{{ end }} ",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:error-code{{else}}p:success-code{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "[{{ .CurrentDate | date .Format }}] ",
          "foreground": "p:time",
          "type": "time",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{if .Root}}#{{else}}${{end}}",
          "foreground": "p:prompt-symbol",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}